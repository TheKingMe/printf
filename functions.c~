#include "main.h"
/**
*rp_char - For c
*@args: from list
*Return: count
**/
int rp_char(va_list args)
{
int count = 0;
char c = va_arg(args, int);
_putchar(c);
count++;
return (count);
}
/**
*rp_string - For s
*@args: from list
*Return: count
**/
int rp_string(va_list args)
{
int count = 0;
char *str;
str = va_arg(args, char *);
while (*str != 0)
{
_putchar(*str);
str++;
count++;
}
return (count);
}
/**
*rp_pourcentage - For %
*@args: from list
*Return: 1
**/
int rp_pourcentage(va_list args)
{
_putchar('%');
return (1);
}
/**
 *change - Change function
 *@s: string
 *Return: Null
 */
int (*change(char s))(va_list)
{
fc specific[] = {
{"c", rp_char},
{"s", rp_string},
{"%", rp_pourcentage},
{NULL, NULL}};
int i = 0;
while (specific[i].c)
{
if (strcmp(specific[i].c, &s) == 0)
return (specific[i].ptr);
i++;
}
return (NULL);
}
